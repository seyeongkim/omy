<p id="notice"><%= notice %></p>

<h1 class="waves-effect waves-light btn red darken-3" >Search Group</h1>

<form action="/groups/find" method="post" >
  <input type="text" name="g_name">
  <input class="waves-effect waves-light btn red darken-3"type="submit">
</form>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= link_to '들어가기', group %></td>
<!--         <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>
<h1 class="waves-effect waves-light btn red darken-3">Create Group</h1>

<%= render 'form' %>

<%= link_to 'view all', groups_path %>