<% sum = Array.new(14) { Array.new(7) }%>
    <% for idx in 0 .. 13%>
       <% sum[idx][0..6] = [0,0,0,0,0,0,0]%>
    <%end%>
    <% @memberships.each do |member| %>
       <% user = User.where(id: member.member_id).first %>

         <% for i in 0 .. 6 %>
           <% sum[0][i] = sum[0][i] + user.schedule.time1[i]%>
           <% sum[1][i] = sum[1][i] + user.schedule.time2[i]%>
